<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="br.com.futeboldospais.futeboldospais.controller.CampeaoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/titulo_tabela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo"
                android:background="@drawable/borda_inferior"
                android:gravity="center"
                android:textColor="@color/grayLight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="CAMPEÕES" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titulo_tabela">

                <View
                    android:id="@+id/divisor_1"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="122dp"
                    android:background="#A8A8A8" />

                <LinearLayout
                    android:id="@+id/time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/divisor_1"
                    android:layout_marginTop="83dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_campeao_master"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_campeao_master"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_ouro"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_1"
                    android:layout_toEndOf="@id/divisor_1"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_segundo_master"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_segundo_master"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_prata"/>
                </LinearLayout>

                <View
                    android:id="@+id/divisor_3"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="322dp"
                    android:background="#A8A8A8" />

                <LinearLayout
                    android:id="@+id/time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_2"
                    android:layout_toEndOf="@id/divisor_3"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_campeao_senior"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_campeao_senior"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_ouro"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_3"
                    android:layout_toEndOf="@id/divisor_3"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_segundo_senior"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_segundo_senior"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_prata"/>
                </LinearLayout>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:text="Campeão Master"
                    android:textSize="10dp"
                    android:layout_above="@+id/time_2"
                    android:layout_alignStart="@+id/time_1"
                    android:layout_marginBottom="38dp"
                    android:gravity="center|start"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:text="Segundo Lugar Master"
                    android:textSize="10dp"
                    android:layout_below="@+id/time_2"
                    android:layout_alignStart="@+id/time_2"
                    android:gravity="center|start"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:text="Campeão Senior"
                    android:textSize="10dp"
                    android:layout_above="@+id/time_4"
                    android:layout_alignStart="@+id/time_3"
                    android:layout_marginBottom="38dp"
                    android:id="@+id/textView2"
                    android:gravity="center|start"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:text="Segundo Lugar Senior"
                    android:textSize="10dp"
                    android:layout_below="@+id/time_4"
                    android:layout_alignStart="@+id/time_4"
                    android:gravity="center|start"/>

                <View
                    android:id="@+id/divisor_5"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="222dp"
                    android:background="#A8A8A8" />

                <View
                    android:id="@+id/divisor_6"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="422dp"
                    android:background="#A8A8A8" />


                <LinearLayout
                    android:id="@+id/time_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_2"
                    android:layout_toEndOf="@id/divisor_5"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_terceiro_master"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_terceiro_master"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_bronze"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_4"
                    android:layout_toEndOf="@id/divisor_6"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_terceiro_senior"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_terceiro_senior"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/trofeu_bronze"/>
                </LinearLayout>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:text="Terceiro Lugar Master"
                    android:textSize="10dp"
                    android:layout_marginTop="22dp"
                    android:layout_below="@+id/time_2"
                    android:layout_alignStart="@+id/time_5"
                    android:gravity="center|start"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:text="Terceiro Lugar Senior"
                    android:textSize="10dp"
                    android:layout_marginTop="22dp"
                    android:layout_below="@+id/time_4"
                    android:layout_alignStart="@+id/time_6"
                    android:gravity="center|start"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
