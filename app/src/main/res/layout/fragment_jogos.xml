<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.futeboldospais.futeboldospais.views.JogosFragment">

    <RelativeLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary2"
        android:focusable="false"
        android:orientation="horizontal"
        android:textColor="#FFFFFF"
        >

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_voltar"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:checkedButton="@+id/offer"
            android:id="@+id/toggle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/pink_out_line"
            android:orientation="horizontal"
            android:layout_marginEnd="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:id="@+id/id_master"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="@string/btn_master"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/id_senior"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="@string/btn_senior"
                android:textColor="@color/black"
                />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/div_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titulo">

        <Button
            android:id="@+id/btn_anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_left" />

        <TextView
            android:id="@+id/txt_rodada"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_proximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_right" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_jogos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div_01"
        android:layout_weight="1"></FrameLayout>


</RelativeLayout>
