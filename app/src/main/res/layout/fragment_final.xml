<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="br.com.futeboldospais.futeboldospais.controller.FinalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/titulo_tabela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo"
                android:background="@drawable/borda_inferior"
                android:gravity="center"
                android:textColor="@color/grayLight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/lbl_finais" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titulo_tabela">

                <View
                    android:id="@+id/divisor_1"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="97dp"
                    android:background="#A8A8A8" />

                <LinearLayout
                    android:id="@+id/time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="57dp"
                    android:layout_toEndOf="@id/divisor_1"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_master_finalista_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_master_finalista_1"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_master_finalista_1"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/borda_esquerda"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_1"
                    android:layout_toEndOf="@id/divisor_1"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_master_finalista_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_master_finalista_2"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_master_finalista_2"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/borda_esquerda"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/divisor_2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="97dp"
                    android:layout_toEndOf="@id/time_1"
                    android:background="#A8A8A8" />

                <View
                    android:id="@+id/divisor_3"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="297dp"
                    android:background="#A8A8A8" />

                <LinearLayout
                    android:id="@+id/time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_2"
                    android:layout_marginTop="120dp"
                    android:layout_toEndOf="@id/divisor_3"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_senior_finalista_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_senior_finalista_1"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_senior_finalista_1"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/borda_esquerda"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_3"
                    android:layout_toEndOf="@id/divisor_3"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_senior_finalista_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_senior_finalista_2"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_senior_finalista_2"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/borda_esquerda"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/divisor_4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="297dp"
                    android:layout_toEndOf="@id/time_3"
                    android:background="#A8A8A8" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/time_2"
                    android:layout_alignStart="@+id/time_1"
                    android:layout_marginBottom="38dp"
                    android:gravity="center|start"
                    android:text="@string/lbl_final_master"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/time_4"
                    android:layout_alignStart="@+id/time_3"
                    android:layout_marginBottom="38dp"
                    android:gravity="center|start"
                    android:text="@string/lbl_final_senior"
                    android:textSize="10dp" />

                <LinearLayout
                    android:id="@+id/time_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_2"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_master_terceiro_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_master_terceiro_1"
                        android:layout_width="102dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_master_terceiro_1"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/borda_esquerda"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/grayLight" />

                    <TextView
                        android:id="@+id/gols_master_terceiro_2"
                        android:layout_width="28dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/borda_direita"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_master_terceiro_2"
                        android:layout_width="102dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/img_master_terceiro_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_4"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/todas_bordas"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_senior_terceiro_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/txt_senior_terceiro_1"
                        android:layout_width="102dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gols_senior_terceiro_1"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/borda_esquerda"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/grayLight" />

                    <TextView
                        android:id="@+id/gols_senior_terceiro_2"
                        android:layout_width="28dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/borda_direita"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_senior_terceiro_2"
                        android:layout_width="102dp"
                        android:layout_height="40dp"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/img_senior_terceiro_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp" />
                </LinearLayout>

                <View
                    android:id="@+id/divisor_5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="197dp"
                    android:layout_toEndOf="@id/time_5"
                    android:background="#A8A8A8" />

                <View
                    android:id="@+id/divisor_6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="397dp"
                    android:layout_toEndOf="@id/time_6"
                    android:background="#A8A8A8" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/time_5"
                    android:layout_below="@+id/time_2"
                    android:layout_marginTop="22dp"
                    android:gravity="center|start"
                    android:text="@string/lbl_terceiro_lugar_master"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/time_6"
                    android:layout_below="@+id/time_4"
                    android:layout_marginTop="22dp"
                    android:gravity="center|start"
                    android:text="@string/lbl_terceiro_lugar_senior"
                    android:textSize="10dp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
