<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.futeboldospais.futeboldospais.util.ModalSuspensao">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:background="@color/white"
        android:focusable="false"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Legendas"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titulo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/div_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_1"
                    android:gravity="center|start"
                    android:text="Suspenso de sua categoria."
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_1"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_2"
                    android:gravity="center|start"
                    android:text="Suspenso de sua categoria, mas liberado para jogar pelo Master."
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_2"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_3"
                    android:gravity="center|start"
                    android:text="Suspenso de sua categoria, mas liberado para jogar na linha pelo Senior."
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_3"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_4"
                    android:gravity="center|start"
                    android:text="Suspenso de sua categoria, mas liberado para jogar no gol pelo Senior."
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_4"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txt_5"
                    android:gravity="center|start"
                    android:text="Suspenso em ambas categorias (Master e Senior)."
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_5"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_vermelho"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_cartaovermelho" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/img_vermelho"
                    android:gravity="center|start"
                    android:text="Cartão Vermelho"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_6"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_amarelo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_cartaoamarelo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/img_amarelo"
                    android:gravity="center|start"
                    android:text="Cartões Amarelos"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/div_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_7"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_julgamento"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_julgamento" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/img_julgamento"
                    android:gravity="center|start"
                    android:text="Julgamento"
                    android:textSize="13sp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
